{
  "name": "aiiinotate",
  "version": "1.0.0",
  "description": "a fast IIIF-compliant annotation server",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "bash run.sh -d",
    "prod": "bash run.sh -p",
    "test": "bash run.sh -t",
    "cli": "dotenvx run -f ./src/config/.env -- node ./cli/index.js",
    "lint": "npx eslint --fix",
    "migrate-init": "dotenvx run -f ./src/config/.env -- npx migrate-mongo init",
    "migrate-make": "dotenvx run -f ./src/config/.env -- npx migrate-mongo create",
    "migrate-apply": "dotenvx run -f ./src/config/.env -- npx migrate-mongo up",
    "migrate-revert": "dotenvx run -f ./src/config/.env -- npx migrate-mongo down",
    "migrate-revert-all": "for i in ./migrations/*; do dotenvx run -f ./src/config/.env -- npx migrate-mongo down; done"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aikon-platform/aiiinotate.git"
  },
  "keywords": [
    "annotation-server",
    "iiif",
    "annotation",
    "international-image-interoperability-framework"
  ],
  "author": "Aikon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Aikon-platform/aiiinotate/issues"
  },
  "homepage": "https://github.com/Aikon-platform/aiiinotate#readme",
  "imports": {
    "#cli/*.js": "./cli/*.js",
    "#src/*.js": "./src/*.js",
    "#db/*.js": "./src/db/*.js",
    "#views/*.js": "./src/views/*.js",
    "#utils/*.js": "./src/utils/*.js",
    "#config/*.js": "./src/config/*.js",
    "#data/*.js": "./src/data/*.js",
    "#jsonData/*.js": "./jsonData/*.js",
    "#testData/*.js": "./jsonData/tests/*.js",
    "#manifests/*.js": "./src/data/manifests/*.js",
    "#annotations/*.js": "./src/data/annotations/*.js"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@fastify/mongodb": "^9.0.2",
    "commander": "^14.0.0",
    "fastify": "^5.5.0",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.18.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "pre-commit": "^1.2.2"
  }
}
